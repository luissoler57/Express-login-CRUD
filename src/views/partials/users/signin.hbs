<div class="row">
    <div class="col-sm-12 col-md-8 col-lg-4 col- mx-auto">
        <div class="card text-center mb-3">
            <div class="card-header">
                <h1>Account Login</h1>
            </div>
            <img src="/img/people-fill.svg" class="rounded-circle mx-auto logo" alt="Logo">
            <div class="card-body">
                <form action="/users/signin" method="POST">
                    <div class="mb-3">
                        <input type="email" class="form-control" name="email" placeholder="Email Address" autofocus>
                    </div>
                    <div class="mb-3">
                        <input type="password" class="form-control" name="password" placeholder="Password">
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-danger form-control">
                            SignIn
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>