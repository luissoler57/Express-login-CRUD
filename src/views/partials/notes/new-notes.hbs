<!--!Creamos loops each con handlebars para mostrar errores-->
<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">New Note</h3>
            </div>
            <div class="card-body">
                <form action="/notes/new-notes" method="POST">
                    <div class="form-group mb-4">
                        <input type="text" name="title" placeholder="Create Title" class="form-control"
                            value="{{title}}" autofocus>
                    </div>
                    <div class="form-group mb-4">
                        <textarea name="description" placeholder="Write to task"
                            class="form-control">{{description}}</textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-danger form-control">
                            <i class="bi bi-bookmark-check-fill"></i>
                            Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>